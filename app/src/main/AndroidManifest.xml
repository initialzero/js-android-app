<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaspersoft.android.jaspermobile"
    android:installLocation="auto">

    <!-- Allows applications to access information about networks -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Allows application to open network sockets -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Allows an application to write to external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".JasperMobileApplication_"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher_jaspermobile"
        android:label="@string/app_label"
        android:theme="@style/Theme.JasperMobile">

        <!-- Main activity -->
        <activity android:name=".activities.HomeActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.jaspersoft.android.samples.jaspermobile.action.EDIT_SERVER_PROFILE" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity that provides functionality for creating and modifying server profiles -->
        <activity android:name=".activities.profile.ServerProfileActivity_"
            android:label="@string/label_add_profile"/>

        <!-- Activity that provides the server profiles management -->
        <activity
            android:name=".activities.profile.ServersManagerActivity_"
            android:label="@string/h_ab_servers" />

        <!-- Activity that performs repository browsing -->
        <activity android:name=".activities.repository.BrowserActivity">
            <!-- enable the search dialog to send searches to SearchActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.repository.SearchActivity" />
        </activity>

        <!--Activity that performs library view -->
        <activity
            android:name=".activities.repository.LibraryActivity_"
            android:label="@string/h_library_label" />

        <!--Activity that performs repository view -->
        <activity
            android:name=".activities.repository.RepositoryActivity_"
            android:label="@string/h_repository_label" />

        <!-- Activity that performs viewing of the favorite items -->
        <activity
            android:name=".activities.favorites.FavoritesActivity_"
            android:label="@string/f_title" />

        <!-- Activity that performs viewing of the saved reports -->
        <activity android:name=".activities.storage.SavedReportsActivity_"
            android:label="@string/sdr_ab_title"
            />

        <!-- Activity that allows to specify the report options before running it -->
        <activity
            android:name=".activities.report.ReportOptionsActivity"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="stateHidden" />

        <!-- Activity that performs report viewing in HTML format -->
        <activity
            android:name=".activities.viewer.html.ReportHtmlViewerActivity_"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation" />

        <!-- Activity that performs report viewing in HTML format -->
        <activity
            android:name=".activities.viewer.html.SavedReportHtmlViewerActivity_"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation" />

        <!-- Activity that performs dashboard viewing in HTML format -->
        <activity
            android:name=".activities.viewer.html.DashboardHtmlViewerActivity_"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation" />

        <!-- Activity that performs report saving to the local storage -->
        <activity
            android:name=".activities.report.SaveReportActivity_"
            android:label="@string/sr_ab_title"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="stateHidden" />

        <!-- Activity that allows to specify the application settings -->
        <activity
            android:name=".activities.settings.SettingsActivity_"
            android:label="@string/st_title" />

        <activity
            android:name=".activities.SearchableActivity_"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <!-- Service used to manage the cache and provide web service result to an activity -->
        <service
            android:name="com.jaspersoft.android.sdk.client.async.JsXmlSpiceService"
            android:exported="false" />

        <provider
            android:name=".db.provider.JasperMobileProvider"
            android:authorities="com.jaspersoft.android.jaspermobile.db.provider"
            android:exported="false" />
    </application>

    <!-- No need for project and is ignored at runtime. This is useful for Android Studio exclusively.
     As soon as you run tests from it, you should explicitly tell him here about your default instrumentation. -->
    <instrumentation
        android:name="com.jaspersoft.android.jaspermobile.test.AnimLessInstrumentationTestRunner"
        android:targetPackage="com.jaspersoft.android.jaspermobile.test.acceptance" />

</manifest>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@android:color/white"
                                                 android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/reportAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.jaspersoft.android.jaspermobile.widget.ReportToolbar
            android:id="@+id/reportToolbar"
            style="@style/Widget.JasperMobile.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_menu_navigation_up">

            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/abc_text_size_title_material_toolbar"/>

        </com.jaspersoft.android.jaspermobile.widget.ReportToolbar>

        <com.jaspersoft.android.jaspermobile.widget.ReportPartsTabLayout
            android:id="@+id/reportPartsTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:tabMode="scrollable"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.jaspersoft.android.jaspermobile.widget.LoadingView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/paginationControl"/>

        <com.jaspersoft.android.jaspermobile.widget.ReportErrorActionView
            android:id="@+id/reportMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/paginationControl"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/controlsContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/paginationControl"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnZoomOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/ic_zoom_out"/>

                <ImageButton
                    android:id="@+id/btnZoomIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/ic_zoom_in"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="@string/cast_zoom_message"
                android:textColor="@android:color/black"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:rowCount="4">

                <ImageButton
                    android:id="@+id/btnScrollUp"
                    android:layout_column="1"
                    android:padding="16dp"
                    android:src="@drawable/ic_arrow_upward"/>

                <ImageButton
                    android:id="@+id/btnScrollLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="16dp"
                    android:src="@drawable/ic_arrow_left"/>

                <ImageButton
                    android:id="@+id/btnScrollRight"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:padding="16dp"
                    android:src="@drawable/ic_arrow_right"/>

                <ImageButton
                    android:id="@+id/btnScrollDown"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="16dp"
                    android:src="@drawable/ic_arrow_downward"/>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center_horizontal"
                android:text="@string/cast_scroll_message"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <com.jaspersoft.android.jaspermobile.widget.SimplePaginationView
            android:id="@+id/paginationControl"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@color/js_dark_gray"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
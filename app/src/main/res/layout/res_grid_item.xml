<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jaspersoft.android.jaspermobile.widget.TopCropImageView
            android:id="@android:id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@android:id/text1"
            android:background="@android:color/white"
            android:contentDescription="@string/img_cd_grid_item"
            android:scaleType="fitXY"
            tools:background="@drawable/bg_gradient_grey" />

        <CheckedTextView
            android:id="@android:id/text1"
            style="@style/grid.item.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/action"
            android:ellipsize="end"
            tools:text="Large Text" />

        <ImageButton
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@android:id/text1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@android:id/text1"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_cancel_saving"
            android:visibility="gone" />

    </RelativeLayout>

</merge>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vg_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_navigation_item"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_library"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_library" />

            <TextView
                android:id="@+id/tv_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/library_card_label" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_repository"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_repository"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_repository" />

            <TextView
                android:id="@+id/tv_repository"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/repository_card_label" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_favorites"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_favorites" />

            <TextView
                android:id="@+id/tv_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/favorites_card_label" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_saved_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_saved_items"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_navigation_icon_saved_items" />

            <TextView
                android:id="@+id/tv_saved_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sdr_ab_title" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/navigation_profile_separator" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_navigation_item"
            android:clickable="true"
            android:padding="15dp"
            android:singleLine="true"
            android:text="@string/settings_card_label" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_navigation_item"
            android:clickable="true"
            android:padding="15dp"
            android:singleLine="true"
            android:text="@string/sa_show_feedback" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_navigation_item"
            android:clickable="true"
            android:padding="15dp"
            android:singleLine="true"
            android:text="@string/sa_show_about" />

    </LinearLayout>

</ScrollView>